		float N1,N2,N3,Med,MedG,SumMed=0;
		int x
		
		Scanner input =new Scanner(System.in);
		
		//Laço de Repetição
		for (x=1;x<=4;x++)
		{
			System.out.println("\nInsira a primeira nota: ");
			N1=input.nextFloat();
			
			System.out.println("\nInsira a segunda nota: ");
			N2=input.nextFloat();
			
			System.out.println("\nInsira a terceira nota: ");
			N3=input.nextFloat();
		}

	}

}
