package Familia52;

import java.util.Scanner;

public class AAOlaMundo {
	//Comentários de 01 linha
	/*
 	Comentários de
 	mais de 01 linha
	*/
	
	//Declaracao de variaveis
	float N1,N2,N3,Med;
	
	//Criar comando Scanner e renomear ele para "leia"
	
	Scanner leia=new Scanner(System.in);
	/*
	 new é um instanciador
	 Clicar na lampadazinha para colocar a biblioteca
	 */
		
	//Leitura de Variaveis
	System.out.println("\nEntre com a primeira nota: ");
	N1=leia.nextFloat();
	
	System.out.println("\nEntre com a segunda nota: ");
	N2=leia.nextFloat();
	
	System.out.println("\nEntre com a terceira nota: ");
	N3=leia.nextFloat();
	
	//Calculos
		//Media
		//O concatenador no Java é o "+" e não a ","
		Med=(N1+N2+N3)/3;
		System.out.println("\nMédia Aritmética: "+Med);
		
	/*
	System e a classe
	out eh um objeto
	println eh uma classe
	 */
}
