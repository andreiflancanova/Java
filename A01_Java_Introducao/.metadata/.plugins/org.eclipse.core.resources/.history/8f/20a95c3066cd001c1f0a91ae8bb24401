package Lista0605;

import java.util.Scanner;

public class Q03 
{

	public static void main(String[] args) 
	{
		//Declaração de variáveis
		int TST,TH,TM,TS;
		
		//Ler duração da tarefa em segundos
		Scanner leia1 = new Scanner(System.in);
		//Leitura de dados
		{
			System.out.println("\nInsira a duração da tarefa em segundos");
			TST=leia1.nextInt();
		}
		//Converter o tempo de segundos para horas, minutos e segundos
		TH=TST/3600;

		TM=(TST%3600)/60;

		TS=((TST%3600)%60);
		
		System.out.println("O tempo total é de:"+TH+" horas, "+TM+" minutos e "+TS+" segundos.")
	}

}
